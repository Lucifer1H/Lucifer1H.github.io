<style>
#zhihu-container{
  width: 100%; 
  height: 500px;
  font-size: 95%;
  overflow-y: auto;
  -ms-overflow-style: none;
  scrollbar-width: none;
}
#zhihu-container::-webkit-scrollbar{
  display: none;
}
.zhihu-list-item{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-bottom: 10px;
  padding-bottom: 5px;
  border-bottom: 1px solid #eaecef;
}
.zhihu-title{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: auto;
}
.zhihu-hot{
  flex-shrink: 0;
  color: #ff6b81;
}
.zhihu-hotness{
  display: inline-block;
  padding: 0 6px;
  transform: scale(.8) translateX(-3px);
  font-weight: bold;
  color: #fff;
  border-top: rgba(255, 255, 255, 0.87) 1px solid;
  border-left: rgba(255, 255, 255, 0.87) 1px solid;
  background: linear-gradient(to bottom right, #348AC7, #7474BF);
  border-radius: 8px;
}
#update-time {
  font-size: 0.9em;
  color: #888;
  margin-bottom: 15px;
}
</style>

<div class="markdown-body">
  <%- page.content %>
</div>

<% if (site.data.zhihu) { %>
  <h2><%= site.data.zhihu.title %></h2>
  <p id="update-time">最后更新: <%= site.data.zhihu.update_time %></p>
  
  <div id='zhihu-container'>
    <div class="zhihu-list">
      <% site.data.zhihu.list.forEach(function(item, i) { %>
        <div class="zhihu-list-item">
          <div class="zhihu-hotness"><%= i + 1 %></div>
          <span class="zhihu-title">
            <a title="<%= item.title %>" href="<%= item.url %>" target="_blank" rel="external nofollow noreferrer"><%= item.title %></a>
          </span>
          <div class="zhihu-hot"><span><%= item.hot %></span></div>
        </div>
      <% }) %>
    </div>
  </div>
<% } else { %>
  <p>暂无热榜数据。</p>
<% } %> 