      <!-- Other Posts (Side/Grid) -->
      {
        latestPosts.slice(1).map((post) => (
          <article class="col-span-full sm:col-span-1 lg:col-span-4 p-6 bg-white dark:bg-gray-900 rounded-3xl shadow-sm border border-gray-100 dark:border-gray-800 hover:shadow-md hover:border-blue-100 dark:hover:border-blue-900/50 transition-all duration-300 flex flex-col justify-between group">
