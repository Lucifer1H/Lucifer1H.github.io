    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-12">
      <!-- Featured/Latest Post (Full Width) -->
      {
        latestPosts.length > 0 && (
          <article class="col-span-full sm:col-span-2 lg:col-span-8 p-8 bg-white dark:bg-gray-900 rounded-3xl shadow-sm border border-gray-100 dark:border-gray-800 hover:shadow-md hover:border-blue-100 dark:hover:border-blue-900/50 transition-all duration-300 group">
