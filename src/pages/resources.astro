---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const resources = await getCollection('resources');
---

<Layout title="Resources | Lucifer1H">
  <div class="max-w-4xl mx-auto">
    <div class="mb-12 text-center">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">Resources</h1>
      <p class="text-gray-500 dark:text-gray-400">
        Curated tools, links, and materials I find useful.
      </p>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {resources.map((resource) => (
        <a href={resource.data.link} target="_blank" rel="noopener noreferrer" 
           class="group p-6 bg-white dark:bg-gray-800 rounded-2xl border border-gray-100 dark:border-gray-700 hover:shadow-lg hover:border-blue-200 dark:hover:border-blue-800 transition-all duration-300 flex flex-col h-full">
          
          <div class="flex items-center justify-between mb-4">
            <span class="text-4xl">{resource.data.icon || 'ðŸ”—'}</span>
            <svg class="w-5 h-5 text-gray-300 group-hover:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </div>
          
          <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
            {resource.data.title}
          </h2>
          
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-4 flex-grow">
            {resource.data.description}
          </p>

          <div class="flex flex-wrap gap-2">
            {resource.data.tags.map((tag) => (
              <span class="px-2 py-0.5 rounded text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
                #{tag}
              </span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
